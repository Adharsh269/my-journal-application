<%- include('partials/header.ejs') %>
<div class="container p-5">
  <% if(locals.episode) { %>
  <div class="info d-flex justify-content-between bg-dark p-2 rounded">
		<div class="date d-flex flex-wrap ">
			<h3 class="text-light">Episode date:</h3>
			<h3 class="ms-2 text-light"><%= episode.posts[0].episode_date %></h3>
		</div>
		<div class="mood d-flex">
			<h3 class="text-light">Mood: </h3>
			<h3 class="text-light"><%= episode.posts[0].mood %></h3>
		</div>
    <div class="star">
      <%= episode.posts[0].star ? '⭐' : '☆' %>
    </div>
  </div>
  <div class="dairy mt-5">
		<div class="wentwell">
			<h2 class=" bg-dark text-light m-0">Went Well</h2>
			<ul class="bg-light">
				<% episode.posts[0].wentwell.forEach((ww) => { %> 
					<%- ww ? `<li contenteditable="true" class="ps-4">${ww}</li>` : `<li contenteditable="true" class="ps-4"></li>` %> 
					<% }); %>
			</ul>
			
		</div>	
		<div class="wentwrong">
			<h2 class=" bg-dark text-light m-0">Went Wrong</h2>
			<ul class="bg-light">
				<% episode.posts[0].wentwrong.forEach((wr) => { %> 
					<%- wr ? `<li contenteditable="true" class="ps-4">${wr}</li>` : `<li contenteditable="true" class="ps-4"></li>` %>
				<% }); %>
			</ul>
		</div>
		<div class="learning">
			<h2 class=" bg-dark text-light m-0">Learning</h2>
			<ul class="bg-light">
				<% episode.posts[0].learning.forEach((l) => { %> 
					<%- l ? `<li contenteditable="true" class="ps-4">${l}</li>` : `<li contenteditable="true" class="ps-4"></li>` %> 
				<% }); %>
			</ul>
		</div>
	</div>
	<% } else if(locals.thought){ %>
		<div class="d-flex justify-content-between bg-dark p-2 rounded">
			<div class="date d-flex flex-wrap gap-3">
				<h3 class="text-light">Thought date:</h3>
				<h3 class="text-light"><%= thought.post.date.slice(0,10) %>,</h3>
				<h3 class="time d-flex flex-wrap text-light">Time:</h3>
				<h3 class="text-light"><%= thought.post.date.slice(11,19) %></h3>
			</div>
			<div class="star">
				<%= thought.post.star ? '⭐' : '☆' %>
			</div>
		</div>
		<div class="thought mt-4">
			<h2 class="bg-dark text-light m-0 p-2">Thought of the time</h2>
			<h3 style="color: #44423D;" class="bg-light p-2 "><%= thought.post.thoughts %></h3>
		</div>
	<% } else { %>
		<h1>Nothing</h1>
	<% } %>
</div>
<%- include('partials/footer.ejs') %>
