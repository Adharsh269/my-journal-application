<%- include('partials/header.ejs') %>
    <div class="container">
        <div class="d-flex flex-column">
            <div class="mt-5 bg-dark p-2">
                <h1 class="text-light"><%- locals.prompts ? "Prompts" : locals.goals ? "Life Goals" : "Nothing" %></h1>
            </div>
            <% if(locals.prompts) { %>
                <% prompts.prompts.forEach((prompt) => { %>
                    <div class="bg-light p-3">
                        <h3 style="color: #44423D;" class="mt-2"><%- prompt ? `<li contentEditable="true" class="ps-4">${prompt}</li>` : "No prompts" %></h3>
                        <hr style="height: 1px;">
                    </div>
                <% }) %>
                <div class="mt-5"   >
                    <button class="btn btn-primary">Add Prompt</button>
                </div>
            <% } else if( locals.goals) { %>
                <% goals.lifegoals.forEach((lg) => { %>
                    <div class=" bg-light p-3">
                        <h3 style="color: #44423D;" ><%- lg ? `<li contentEditable="true" class="ps-4">${lg}</li>` : "No prompts" %></h3>
                    
                    <hr style="height: 1px;">
                </div>
                <% }) %>
                <div class="mt-5"   >
                    <button class="btn btn-primary">Add Goal</button>
                </div>
            <% } %>
        </div>
    </div>
<%- include('partials/footer.ejs') %>